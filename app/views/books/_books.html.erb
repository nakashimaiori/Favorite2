<table class='table table-hover'>
          <thead>
          <tr>
            <td></td>
            <td><strong>Title</strong></td>
            <td><strong>Opinion</strong></td>
          </tr>
          </thead>

        <% books.each do |book| %>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(book.user_id) do %>
              <%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, format: 'jpeg', fallback: "no_image.jpg",size:'20x20' %>
            </td>
            <% end %>
            <td><%=link_to book.title, book_path(book.id) %></td>
            <td><%=link_to book.body %></td>
            <td>
              <!-- いいね部分 -->
              <div id="favorite_heart_<%= book.id %>">
                <%= render 'favorites/like', book: book %>
              </div>
              <!-- いいね↑ -->
            </td>
            <td><%= link_to "コメント数：#{book.post_comments.count}", book_path(book.id) %></td>
          </tr>
        </tbody>
        <% end %>
</table>


