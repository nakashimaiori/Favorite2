<table class='table'>
			<tr>
			<td>
				<!--  -->
				<%= link_to user_path(book.user.id) do %>
				<!--  -->
				<%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size:'50x50',format: 'no_image.jpg' %>
				<!--  -->
					<div><%= book.user.name %></div>
				<% end %>
			</td>
			<!--  -->
			<td><%= link_to book.title %></td>
			<!--  -->
			<td><%= book.body %></td>
      <td>
              <!-- いいね -->
        <div id="favorite_heart_<%= book.id %>">
          <%= render 'favorites/like', book: book %>
        </div>
              <!-- いいね -->
      </td>
      <td>
      	<!--  -->
        コメント数：<%= book.post_comments.count %>
      </td>

<!--  -->
			<% if book.user.id == current_user.id %>
			 <td>
        <%= link_to "Edit",edit_book_path(book.id),class:"btn-sm btn-success" %>
      </td>
			 <td>
        <%= link_to "Destroy",book_path(book.id),class:"btn-sm btn-danger", method: :delete,data: {confirm: "削除しますか？"} %>
      </td>
			 <% end %>
			</tr>
</table>
